<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".CurrentNoteFragment">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/add_note_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:textSize="@dimen/add_note_header"
        android:hint="@string/add_note_header_hint"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/add_note_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:textSize="@dimen/add_note_date"
        tools:text="date" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/add_note_checkbox_like"
            android:layout_width="@dimen/add_note_checkbox_favorite_width"
            android:layout_height="@dimen/add_note_checkbox_favorite_height"
            android:layout_gravity="left" />

        <TextView
            android:id="@+id/add_note_favorite_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="favorite"
            android:textSize="@dimen/note_card_footer_size" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/add_note_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:textSize="@dimen/add_note_text"
        android:hint="@string/add_note_text_of_note_hint" />
    <Space  android:layout_height="0dp" android:layout_width="match_parent"
        android:layout_weight="1"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_note_button"
        android:layout_gravity="bottom"
        android:text="@string/add_note_button_text"/>
</LinearLayout>